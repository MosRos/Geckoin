<resources>
    <style name="Widget.AS.CardView" parent="Base.Theme">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">@dimen/card_Stroke_width</item>
        <item name="strokeColor">@color/element_border_color</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>
    <style name="Widget.AS.Toolbar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:background">?attr/colorSurface</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="Widget.AS.AppBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">?attr/colorSurface</item>
        <item name="elevation">@dimen/app_bar_elevation</item>
        <item name="android:elevation">@dimen/app_bar_elevation</item>
    </style>

    <style name="TextAppearance.CoinPrice" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/firasans_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextAppearance.PercentChange" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/firasans_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextAppearance.CoinSymbol" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/firasans_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.CoinNameSubtitle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/firasans_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.TrendCoinSymbol" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/firasans_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextAppearance.SettingsItem" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/firasans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>
    <style name="TextAppearance.TrendCoinRank" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/firasans_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Widget.BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/color_surface</item>
        <item name="backgroundColor">@color/color_surface</item>
        <item name="itemIconTint">@drawable/selector_bottom_nav</item>
        <item name="itemTextColor">@drawable/selector_bottom_nav</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavSelected</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.BottomNav</item>
        <item name="elevation">@dimen/bottom_nav_elevation</item>
    </style>

    <style name="TextAppearance.BottomNavSelected" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/firasans_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.BottomNav" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/firasans_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/icon_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget_Toggle_Option_Start_Title_Style" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>
    <style name="Widget_Toggle_Option_End_Title_Style" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.MaterialComponents.MediumComponent.AlertView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">@dimen/dialog_corner_radius</item>
    </style>

    <style name="AppTheme.AlertDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <!-- ColorPrimary corresponds to the color of a button in an alert dialog.-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="cornerRadius">@dimen/dialog_corner_radius</item>
        <item name="android:colorBackground">@color/color_surface</item>
        <item name="background">@color/color_surface</item>
        <item name="android:background">@color/color_surface</item>
        <item name="backgroundTint">@color/color_surface</item>
        <item name="android:backgroundTint">@color/color_surface</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MaterialComponents.MediumComponent.AlertView</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.MediumComponent.AlertView</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="elevation">0dp</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
    <style name="AppModalStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="background">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>
</resources>
