<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintWidth_percent="0.3"
        android:layout_marginTop="@dimen/margin_large"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_launcher"
        />
    <TextView
        android:id="@+id/txtAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        android:layout_marginTop="@dimen/margin_normal"
        style="@style/TextAppearance.CoinSymbol"
        android:text="@string/app_name"
        android:textSize="@dimen/text_size_header"
        />
    <com.mrostami.geckoin.presentation.widgets.MenuItemView
        android:id="@+id/menuThemeSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtAppName"
        android:layout_marginTop="@dimen/margin_large"
        app:startIcon="@drawable/ic_color_lens"
        app:title="@string/theme"
        app:showDescription="true"
        app:showEndIcon="false"
        app:showStartIcon="true"
        app:showSubtitle="false"
        app:showBottomDivider="true"
        />

    <com.mrostami.geckoin.presentation.widgets.MenuItemView
        android:id="@+id/menuAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menuThemeSetting"
        app:startIcon="@drawable/ic_help_circle"
        android:fontFamily="@font/firasans_regular"
        app:title="@string/about"
        app:showDescription="false"
        app:showEndIcon="false"
        app:showStartIcon="true"
        app:showSubtitle="false"
        app:showBottomDivider="true"
        />

    <com.mrostami.geckoin.presentation.widgets.MenuItemView
        android:id="@+id/menuDeveloper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menuAbout"
        app:startIcon="@drawable/ic_code"
        app:title="@string/developer"
        app:showDescription="false"
        app:showEndIcon="false"
        app:showStartIcon="true"
        app:showSubtitle="false"
        app:showBottomDivider="true"
        />

</androidx.constraintlayout.widget.ConstraintLayout>