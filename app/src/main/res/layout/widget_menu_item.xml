<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    android:id="@+id/rootLayout">
    <ImageView
        android:id="@+id/imgStartIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtTitle"
        app:layout_constraintBottom_toBottomOf="@id/txtTitle"
        android:layout_marginStart="@dimen/margin_small"
        tools:src="@drawable/ic_home_selected"
        app:tint="@color/text_color_primary"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgStartIcon"
        app:layout_constraintBottom_toTopOf="@id/txtSubtitle"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginStart="@dimen/padding_large"
        app:layout_goneMarginStart="0dp"
        app:layout_goneMarginBottom="@dimen/margin_large"
        app:layout_constraintVertical_chainStyle="packed"
        android:textSize="@dimen/text_size_body"
        android:textColor="@color/text_color_primary"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/txtSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/txtTitle"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:paddingBottom="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_normal"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/text_color_secondary"
        android:maxLines="1"
        android:visibility="gone"
        tools:text="Everyday" />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintTop_toTopOf="@id/imgEndIcon"
        app:layout_constraintBottom_toBottomOf="@id/imgEndIcon"
        app:layout_constraintEnd_toStartOf="@id/imgEndIcon"
        android:textColor="@color/text_color_secondary"
        android:textSize="@dimen/text_size_content"
        android:ellipsize="end"
        android:gravity="end|center_vertical"
        android:maxLines="1"
        android:paddingEnd="8dp"
        android:visibility="gone"
        tools:text="Everyday" />
    <ImageView
        android:id="@+id/imgEndIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/margin_small"
        android:src="@drawable/ic_arrow_right"
        app:tint="@color/icon_color"
        android:background="?attr/selectableItemBackgroundBorderless"/>
    <View
        android:id="@+id/bottomDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="@id/txtTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/margin_normal"
        android:background="@color/divider_color"/>
</androidx.constraintlayout.widget.ConstraintLayout>